<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1BD8D"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Add an empty view to push the CardView to the bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Add ImageView for the logo -->
    <ImageView
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="center"
        android:src="@drawable/logo" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="5dp"
        android:layout_margin="10dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#C6E9EE">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#C6E9EE">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="4dp"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#C6E9EE">

                <TextView
                    android:id="@+id/etEntryNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="Timesheet Entry Name "
                    android:textColor="#F1BD8D"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="#F19B4B"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/etStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="Start Date:"
                    android:textColor="#4E4E4E"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="#F1BD8D"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/etDueDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="Due date:"
                    android:textColor="#4E4E4E"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="#F1BD8D"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="Description:"
                    android:textColor="#4E4E4E"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="#F1BD8D"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/etCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="Category:"
                    android:textColor="#4E4E4E"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="#F1BD8D"
                    android:textSize="19sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

