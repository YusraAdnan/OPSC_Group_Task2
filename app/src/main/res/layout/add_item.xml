<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#C6E9EE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#F1BD8D"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add the Project Info"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editTextProjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Project name"
            android:background="#F1D7BF"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="8dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTextMaxHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Max hours"
            android:background="#F1D7BF"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="8dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTextMinHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Min hours"
            android:background="#F1D7BF"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="8dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

</LinearLayout>

