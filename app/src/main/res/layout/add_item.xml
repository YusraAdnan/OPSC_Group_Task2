<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/orange"
    tools:context=".Activity.MainActivity">


    <TextView
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:drawableTop="@drawable/logo"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Category"
        android:id="@+id/addText"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/darkblue"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:backgroundTint="@color/lightBlue"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/custom_edittext">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/projectName"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:textSize="19dp"
                android:backgroundTint="@color/orange"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:hint="Project Name"
                android:drawableLeft="@drawable/baseline_edit_note_24"
                android:textColor="@color/black"
                android:drawablePadding="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/maxHours"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="20dp"
                android:inputType="number"
                android:textSize="19dp"
                android:backgroundTint="@color/orange"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:padding="8dp"
                android:hint="Max daily goal hours"
                android:drawableLeft="@drawable/baseline_access_time_24"
                android:textColor="@color/black"
                android:drawablePadding="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/minHours"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="20dp"
                android:inputType="number"
                android:textSize="19dp"
                android:backgroundTint="@color/orange"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:padding="8dp"
                android:hint="Min daily goal hours"
                android:drawableLeft="@drawable/baseline_access_time_24"
                android:textColor="@color/black"
                android:drawablePadding="8dp"/>




        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
